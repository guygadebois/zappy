.PHONY: all a re clean fclean depend sources libft
.SUFFIXES:

export CC = gcc
CCPP = g++ -std=c++98 -pedantic
NAME = zappy
SERVEUR_NAME = serveur
CLIENT_NAME = client
VISU_NAME = visu
FLAGS = -Wall -Wextra -Werror -ggdb -g
INCL_FLAGS = -Iinclude -Ilibft/include
OGRE_INCL_FLAGS =	-I OgreSDK/include/OGRE \
					-I OgreSDK/include/OGRE/OSX \
					-I OgreSDK/include/OGRE/Paging \
					-I OgreSDK/include/OGRE/Plugins \
					-I OgreSDK/include/OGRE/Plugins/BSPSceneManager \
					-I OgreSDK/include/OGRE/Plugins/CgProgramManager \
					-I OgreSDK/include/OGRE/Plugins/OctreeSceneManager \
					-I OgreSDK/include/OGRE/Plugins/OctreeZone \
					-I OgreSDK/include/OGRE/Plugins/PCZSceneManager \
					-I OgreSDK/include/OGRE/Plugins/ParticleFX \
					-I OgreSDK/include/OGRE/RTShaderSystem \
					-I OgreSDK/include/OGRE/RenderSystems/GL \
					-I OgreSDK/include/OGRE/RenderSystems/GL/GL \
					-I OgreSDK/include/OGRE/RenderSystems/GL/OSX \
					-I OgreSDK/include/OGRE/Terrain \
					-I OgreSDK/include/OGRE/Threading \
					-I OgreSDK/boost_1_46_1/boost \
					-I OgreSDK/include/OGRE/OSX \
					-I OgreSDK/boost_1_46_1

OGRE_LD_FLAGS=		-L OgreSDK/lib/release \
					-L OgreSDK/boost_1_46_1/lib \
					-L OgreSDK/lib \
					-lOIS -lboost_date_time-xgcc42-mt-1_46_1 -lboost_thread-xgcc42-mt-1_46_1

CFLAGS = $(INCL_FLAGS) $(FLAGS) $(OGRE_INCL_FLAGS)
LDFLAGS = -Llibft -lft

SERVEUR_OFILES = $(notdir $(SERVEUR_CFILES:.c=.o))
CLIENT_OFILES = $(notdir $(CLIENT_CPPFILES:.cpp=.o))
VISU_OFILES = $(notdir $(VISU_CPPFILES:.cpp=.o))
COMMON_CPP_OFILES = $(notdir $(COMMON_CPPFILES:.cpp=.o))

OFILES = $(notdir $(CFILES:.c=.o)) $(notdir $(CPPFILES:.cpp=.o))
# START INSERT .source

# END INSERT
SRCDIR = src/

SERVEUR_SRCDIR = src/serveur_src/
CLIENT_SRCDIR = src/client_src/
VISU_SRCDIR = src/visu_src/
COMMON_CPP_SRCDIR = src/common_cpp_src/

OBJDIR = obj/

SERVEUR_OBJ = $(addprefix $(OBJDIR)sv_,$(SERVEUR_OFILES))
CLIENT_OBJ = $(addprefix $(OBJDIR)cl_,$(CLIENT_OFILES))
VISU_OBJ = $(addprefix $(OBJDIR)visu_,$(VISU_OFILES))
COMMON_CPP_OBJ = $(addprefix($(OBJDIR)cm_,$(COMMON_OFILES))

OBJ = $(SERVEUR_OBJ) $(CLIENT_OBJ) $(VISU_OBJ) $(COMMON_CPP_OBJ)

CYAN = "\033[36m"
BLUE = "\033[34;1;3m"
GREEN = "\033[32m"
IGREEN = "\033[30;42m"
RED = "\033[31m"
IRED = "\033[0;37;41m"
BRED = "\033[31;1m"
END = "\033[0m"

all: $(NAME)
a: all clean

$(NAME): $(SERVEUR_NAME) $(CLIENT_NAME) $(VISU_NAME)

$(SERVEUR_NAME): libft/libft.a $(SERVEUR_OBJ)
	@/bin/echo "";
	@echo $(BLUE)"    === Linking $@..."$(END);
	@/bin/echo "";
	@$(CC) -o $@ $(SERVEUR_OBJ) $(CFLAGS) $(LDFLAGS)

$(CLIENT_NAME): $(CLIENT_OBJ) $(COMMON_CPP_OBJ)
	@/bin/echo "";
	@echo $(BLUE)"    === Linking $@..."$(END);
	@/bin/echo "";
	@$(CCPP) -o $@ $(CLIENT_OBJ) $(COMMON_CPP_OBJ) $(CFLAGS)

$(VISU_NAME): $(VISU_OBJ) $(COMMON_CPP_OBJ)
	@/bin/echo "";
	@echo $(BLUE)"    === Linking $@..."$(END);
	@/bin/echo "";
	@$(CCPP) -o $@ $(VISU_OBJ) $(COMMON_CPP_OBJ) $(INCL_FLAGS) $(OGRE_INCL_FLAGS)

ogre:
	@cmake >/dev/null 2>/dev/null || brew install cmake
	curl -L -O 'https://sourceforge.net/projects/ogre/files/ogre/1.7/ogre-v1-7-0RC1.tar.bz2/download'
	mv download ogre-v1-7-0RC1.tar.bz2
	tar xvjf ogre-v1-7-0RC1.tar.bz2
	curl -L -O http://sourceforge.net/projects/boost/files/boost/1.55.0/boost_1_55_0.tar.bz2/download
	mv download boost_1_55_0.tar.bz2
	cd ogre mkdir build && cd build && cmake -G Xcode .. \
&& make && make install
	cmake -D OGRE_DEPENDENCIES_DIR=../../ogredeps/build/ogredeps -D OGRE_STATIC=1 -G Xcode ..

libft/libft.a:
	@make -C libft

fclean: clean
	@make -C libft $@
	@/bin/rm -f $(SERVEUR_NAME) $(CLIENT_NAME) $(VISU_NAME)
	@echo $(BRED)"    === Removing "$(SERVEUR_NAME) $(CLIENT_NAME) $(VISU_NAME)$(END)

sclean:
	@/bin/rm -f $(OBJ)
	@echo $(RED)"    --> Removing .o files"$(END)

clean: sclean
	@make -C libft $@

r: sclean all
re:	fclean all
# IGNORE NEXT LINES

sources:
	@find $(SRCDIR) -name "*~" -delete
	@find $(SRCDIR) -name "*#" -delete
	@find $(SRCDIR) -name "#*" -delete
	@find $(SRCDIR) -name ".#*" -delete
	@echo $(IRED)"    Cleaning "$(SRCDIR)" content..."$(END)
	@echo 'SERVEUR_CFILES= \\' > .sources
	@find $(SERVEUR_SRCDIR) -name "*.c" | sed 's/'"^[^\/]*\/"'/		/g' | sort | sed 's/.*/& \\/g' >> .sources
	@echo "" >> .sources
	@echo 'CLIENT_CPPFILES= \\' >> .sources
	@find $(CLIENT_SRCDIR) -name "*.cpp" | sed 's/'"^[^\/]*\/"'/		/g' | sort | sed 's/.*/& \\/g' >> .sources
	@echo "" >> .sources
	@echo 'VISU_CPPFILES= \\' >> .sources
	@find $(VISU_SRCDIR) -name "*.cpp" | sed 's/'"^[^\/]*\/"'/		/g' | sort | sed 's/.*/& \\/g' >> .sources
	@echo "" >> .sources
	@echo 'COMMON_CPPFILES= \\' >> .sources
	@find $(COMMON_CPP_SRCDIR) -name "*.cpp" | sed 's/'"^[^\/]*\/"'/		/g' | sort | sed 's/.*/& \\/g' >> .sources
	@echo "" >> .sources
	@echo 'CFILES= $$(SERVEUR_CFILES)' >> .sources
	@echo 'CPPFILES= $$(CLIENT_CPPFILES) $$(VISU_CPPFILES) $$(COMMON_CPPFILES)' >> .sources
	@echo "" >> .sources

depend:
	@echo $(IGREEN)'Creating dependancies (.depend) \c';
	@rm -f .depend
	@echo '[\c'
	@$(foreach source,$(SERVEUR_CFILES), echo '*\c'; \
	echo $(OBJDIR)'sv_\c' >> .depend; \
	$(CC) $(CFLAGS) -MM $(SRCDIR)$(source) >>  .depend; \
	echo '\t@echo $$(CYAN)"    Creating' $(OBJDIR)sv_$(notdir $(source:.c=.o))\
	'...\\033[0m"' >>.depend; \
	echo '\t@mkdir -p $$(OBJDIR);' >> .depend; \
	echo '\t@$$(CC) -o $$(OBJDIR)'sv_$(notdir $(source:.c=.o)) '\\' >> .depend; \
	echo '-c $$(SRCDIR)'$(source) '$$(CFLAGS)\n' >> .depend;)
	@$(foreach source,$(CLIENT_CPPFILES), echo '*\c'; \
	echo $(OBJDIR)'cl_\c' >> .depend; \
	$(CCPP) $(CFLAGS) -MM $(SRCDIR)$(source) >>  .depend; \
	echo '\t@echo $$(CYAN)"    Creating' $(OBJDIR)cl_$(notdir $(source:.cpp=.o))\
	'...\\033[0m"' >>.depend; \
	echo '\t@mkdir -p $$(OBJDIR);' >> .depend; \
	echo '\t@$$(CCPP) -o $$(OBJDIR)'cl_$(notdir $(source:.cpp=.o)) '\\' >> .depend; \
	echo '-c $$(SRCDIR)'$(source) '$$(CFLAGS)\n' >> .depend;)
	@$(foreach source,$(VISU_CPPFILES), echo '*\c'; \
	echo $(OBJDIR)'visu_\c' >> .depend; \
	$(CCPP) $(CFLAGS) -MM $(SRCDIR)$(source) >>  .depend; \
	echo '\t@echo $$(CYAN)"    Creating' $(OBJDIR)visu_$(notdir $(source:.cpp=.o))\
	'...\\033[0m"' >>.depend; \
	echo '\t@mkdir -p $$(OBJDIR);' >> .depend; \
	echo '\t@$$(CCPP) -o $$(OBJDIR)'visu_$(notdir $(source:.cpp=.o)) '\\' >> .depend; \
	echo '-c $$(SRCDIR)'$(source) '$$(INCL_FLAGS) $$(OGRE_INCL_FLAGS)\n' >> .depend;)
	@$(foreach source,$(COMMON_CPPFILES), echo '*\c'; \
	echo $(OBJDIR)'cm_\c' >> .depend; \
	$(CCPP) $(CFLAGS) -MM $(SRCDIR)$(source) >>  .depend; \
	echo '\t@echo $$(CYAN)"    Creating' $(OBJDIR)cm_$(notdir $(source:.cpp=.o))\
	'...\\033[0m"' >>.depend; \
	echo '\t@mkdir -p $$(OBJDIR);' >> .depend; \
	echo '\t@$$(CCPP) -o $$(OBJDIR)'cm_$(notdir $(source:.cpp=.o)) '\\' >> .depend; \
	echo '-c $$(SRCDIR)'$(source) '$$(CFLAGS)\n' >> .depend;)
	@echo ']'$(END)

